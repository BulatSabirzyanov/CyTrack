<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30sp"
    android:paddingBottom="10sp"
    tools:ignore="RtlSymmetry">


    <TextView
        android:id="@+id/tVTeam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="29sp"
        tools:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/iVTeam1Icon"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iVTeam1Icon"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="0sp"
        android:layout_marginTop="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tVTeam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="36dp"
        android:layout_marginTop="29sp"

        tools:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tVDate"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iVTeam2Icon"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tVTeam2"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/tVDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        tools:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tVTeam1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>